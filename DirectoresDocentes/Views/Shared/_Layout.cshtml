<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Styles.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">    
    <link rel="stylesheet" href="~/Content/sweetalert.css">
    <link href="~/Content/ej/web/bootstrap-theme/ej.widgets.all.min.css" rel="stylesheet"/>
    <link href="~/Content/ej/web/responsive-css/ej.responsive.css" rel="stylesheet"/>
    <link href="~/Content/ej/web/responsive-css/ejgrid.responsive.css" rel="stylesheet"/>
    <!-- fuente de íconos -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">    
    @Scripts.Render("~/bundles/modernizr")
    <style>        

        /* Important part */
        .modalon .modal-dialog { overflow-y: initial !important; }

        .modalon .modal-body {
            height: 650px;
            overflow-y: auto;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>    
    @RenderSection("scripts", false)
    @if (ViewBag.IfUser)
    {
        <script type="text/javascript">
            var username = "@ViewBag.User";
            var persona = "@ViewBag.Persona";
        </script>
    }    
    <script src="~/Scripts/jquery.validate.min.js"></script>    
    <script src="~/Scripts/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/jquery.globalize.min.js"></script>
    <script src="~/Scripts/globalize.culture.es-ES.min.js"></script>
    <script src="~/Scripts/jsrender.min.js"></script>
    <script src="~/Scripts/ej/ej.web.all.min.js" type="text/javascript"></script>    
    <script src="~/Scripts/sweetalert.min.js"></script>    
    <script src="~/Scripts/App.js"></script> 
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/Home/Busqueda">
                <img src="~/Content/logos/logo-white.png" height="60"/>
            </a>
        </div>
        <p class="navbar-text text-light">Bachillerato y Titulación</p>
        <div class="navbar-collapse collapse">            
            @if (ViewBag.IfUser)
            {
                <ul class="nav navbar-nav navbar-right" style="margin: 0 !important;">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            @ViewBag.User <img src="" alt="" id="fotoPersona" style="border-radius: 60%; position: relative; top: 20%; height: 20px;"/> <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/Home/Close">Cerrar Sesión <span class="fa fa-sign-out"></span></a>
                            </li>
                        </ul>
                    </li>
                </ul>
            }
        </div>
    </div>
</div>
<div class="">
    @RenderBody()
    <div class="panel">
        @RenderSection("ControlsSection", false)
    </div>
</div>
<footer>
    <p class="text-center">
        Copyright @@ @DateTime.Now.Year - Docentes | Experiencia y Capacitación
    </p>
</footer>
</body>
</html>